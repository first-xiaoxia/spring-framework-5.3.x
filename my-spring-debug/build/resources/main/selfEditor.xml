	<!-- 第二种方式，直接添加到customEditors -->
	<bean class="org.springframework.beans.factory.config.CustomEditorConfigurer">
		<property name="customEditors">
			<map>
				<entry key="com.nj.selfEditor.Address" value="com.nj.selfEditor.AddressPropertyEditor"></entry>
			</map>
		</property>
	</bean>
</beans>